{
  "manifest_version": 2,
  "name": "ScrapingTool",
  "version": "1.0.0",
  "description": "A Firefox extension for web scraping and data extraction",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "ScrapingTool",
    "default_popup": "popup/popup.html"
  }
}
